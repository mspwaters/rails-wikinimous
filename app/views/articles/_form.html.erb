<div class="form">
<%= form_for(@article) do |f| %>
<div class="form-group">
  <label class="control-label required"><%= f.label :title %></label>
  <div class="form-control"><%= f.text_field :title %></div>
</div>
<div class="form-group">
  <label class="control-label required"><%= f.label :content %></label>
  <div class="form-control"><%= f.text_field :content %></div>
</div>
  <%= f.submit %>
<% end %>
</div>